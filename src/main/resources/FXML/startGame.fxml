<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.userMenu.StartMenu"
            stylesheets="@../CSS/style.css"
            styleClass="BackGround"
            prefHeight="800.0" prefWidth="800.0" >
    <padding>
        <Insets top="20" right="20" left="20" bottom="20" />
    </padding>
    <center>
        <VBox spacing="30" alignment="CENTER" prefWidth="500" prefHeight="500">
            <Label text="welcome tho AA!" prefHeight="30" prefWidth="100" styleClass="label"/>
            <Button text="signup" onMouseClicked="#registrationPage" prefHeight="30" prefWidth="100"/>
            <Button text="login" onMouseClicked="#loginPage" prefHeight="30" prefWidth="100"/>
            <Button text="play as guest" onMouseClicked="#playAsGuest" prefHeight="30" prefWidth="100"/>
            <Button text="quit" onMouseClicked="#terminateProgram" prefHeight="30" prefWidth="100"/>
        </VBox>
    </center>
    <bottom>
        <HBox spacing="30" alignment="CENTER_RIGHT"  >
            <ToggleButton text="dark theme" prefHeight="30" prefWidth="100" onMouseClicked="#changeTheme" fx:id="toggleButtonTheme"/>
            <ToggleButton text="mute music" prefHeight="30" prefWidth="100" onMouseClicked="#muteMusic" fx:id="toggleButtonMute"/>
        </HBox>
    </bottom>

</BorderPane>
