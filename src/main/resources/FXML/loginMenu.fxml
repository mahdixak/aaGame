<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.controllers.LoginMenuController"
            prefHeight="600.0" prefWidth="600.0">
    <center>
        <VBox spacing="30" alignment="CENTER" prefWidth="500" prefHeight="500">
            <Label text="Login Panel" prefHeight="30" prefWidth="100" styleClass="label"/>
            <TextField promptText="username:" maxHeight="100" maxWidth="200" fx:id="username"/>
            <PasswordField promptText="password:" maxHeight="100" maxWidth="200" fx:id="password"/>
            <Button text="login" onMouseClicked="#checkTextFieldsForLoggingIn" prefHeight="30" prefWidth="100"/>
            <Button text="reset" onMouseClicked="#clearFields" prefHeight="30" prefWidth="100"/>
            <Button text="back" onMouseClicked="#goBack" prefHeight="30" prefWidth="100"/>
            <Button text="quit" onMouseClicked="#terminateProgram" prefHeight="30" prefWidth="100"/>
        </VBox>
    </center>
</BorderPane>
