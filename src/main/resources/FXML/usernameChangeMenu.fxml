<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="view.UsernameChangeMenu"
            prefHeight="800.0" prefWidth="800.0">
    <center>
        <VBox alignment="CENTER" spacing="20">
            <TextField promptText="new username" fx:id="newUsername" maxWidth="200" maxHeight="100"/>
            <PasswordField promptText="password" fx:id="password" maxHeight="100" maxWidth="200"/>
            <HBox alignment="CENTER" spacing="20">
                <Button text="Change Username" prefHeight="30" prefWidth="100" onMouseClicked="#changingPlayerUsername" />
                <Button text="Go Back" onMouseClicked="#goBackToAccountSettings" prefHeight="30" prefWidth="100"/>
            </HBox>
        </VBox>
    </center>
</BorderPane>
