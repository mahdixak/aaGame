<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@../CSS/style.css"
            styleClass="BackGround"
            fx:controller="aagame.view.LoginMenuController"
            prefHeight="400.0" prefWidth="600.0">
    <center>
        <VBox alignment="CENTER" spacing="15">
            <Label text="welcome !"/>
            <TextField promptText="username" maxWidth="200" fx:id="username"/>
            <PasswordField promptText="password" maxWidth="200" fx:id="password"/>
            <HBox alignment="CENTER" spacing="15">
                <Button text="submit" onMouseClicked="#runSubmit"/>
                <Button text="reset" onMouseClicked="#runReset"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>